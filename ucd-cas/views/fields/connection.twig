{% if args.short_slug == 'host' %}
  <input 
    id="{{args.label_for}}" 
    class="regular-text code"
    name="{{optionsSlug}}[{{args.label_for}}]" 
    type="text"
    value="{{options[args.label_for]}}"
    {{args.env ? 'readonly'}}
    required>
  {% if args.env %}
    <p class="description">
      Value is currently being set by an environmental variable and is readonly.
    </p>
  {% endif %}
  <p class="description">
  <code>ssodev.ucdavis.edu</code> is the development server. It does not require registration.
  </p>
  <p class="description">
  <code>cas.ucdavis.edu</code> is the production server. You must <a href="https://casmgr.ucdavis.edu/">register this site</a>.
  </p>
{% endif %}

{% if args.short_slug == 'port' %}
  <input 
    id="{{args.label_for}}" 
    class="small-text"
    name="{{optionsSlug}}[{{args.label_for}}]" 
    type="text"
    value="{{options[args.label_for]}}"
    required>
  <p class="description">This is almost always going to be '443'</p>
{% endif %}

{% if args.short_slug == 'uri' %}
  <input 
    id="{{args.label_for}}" 
    class="regular-text code"
    name="{{optionsSlug}}[{{args.label_for}}]" 
    type="text"
    value="{{options[args.label_for]}}"
    required>
  <p class="description">
  UC Davis CAS servers are located at the <code>cas</code> URI
  </p>
{% endif %}

{% if args.short_slug == 'validation' %}
  <input 
    id="{{args.label_for}}" 
    class=""
    name="{{optionsSlug}}[{{args.label_for}}]" 
    type="checkbox"
    value="1"
    {{options[args.label_for] == "1" ? 'checked'}}>
  <p class="description">Enables SSL validation of the CAS server</p>
{% endif %}

{% if args.short_slug == 'validation_path' %}
  <input 
    id="{{args.label_for}}" 
    class="regular-text code"
    name="{{optionsSlug}}[{{args.label_for}}]" 
    type="text"
    value="{{options[args.label_for]}}">
  <p class="description">
  If using SSL validation, enter path to CA certificate that is the issuer of the CAS cert
  </p>
{% endif %}

{% if args.short_slug == 'validation_uri' %}
  <input 
    id="{{args.label_for}}" 
    class="regular-text code"
    name="{{optionsSlug}}[{{args.label_for}}]" 
    type="text"
    value="{{options[args.label_for]}}">
  <p class="description">
  If using SSL validation, what is the server uri? Should be <code>p3/serviceValidate</code> for UC Davis.
  </p>
{% endif %}