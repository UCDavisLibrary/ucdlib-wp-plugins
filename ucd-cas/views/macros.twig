{% macro regularTextInput( field, code ) %}
  {% set class = "regular-text" %}
  {% if code %}
    {% set class = class~" code" %}
  {% endif %}
  {% if field.args.env %}
    {% set value = field.args.env %}
  {% else %}
    {% set value = field.options[field.args.label_for] %}
  {% endif %}
  <input 
    id="{{field.args.label_for}}" 
    class="{{class}}"
    name="{{field.optionsSlug}}[{{field.args.label_for}}]" 
    type="text"
    value="{{value}}"
    {{field.args.env ? 'readonly'}}
    {{field.args.required ? "required"}}>
{% endmacro %}

