{% macro textArea( field, size="regular", rows="5") %}
  {% set class = size~"-text" %}
  {% if field.args.env %}
    {% set value = field.args.env %}
  {% else %}
    {% set value = field.options[field.args.label_for] %}
  {% endif %}
  <textarea 
  name="{{field.optionsSlug}}[{{field.args.label_for}}]"
  class="{{class}}"
  id="{{field.args.label_for}}" 
  rows="{{rows}}" 
  >{{value}}</textarea>
{% endmacro %}

{% macro checkbox(field) %}
  {% if field.args.env is not same as(false) %}
    {% set value = field.args.env %}
    {% set isenv = true %}
  {% else %}
    {% set value = field.options[field.args.label_for] %}
  {% endif %}
  <input 
    id="{{field.args.label_for}}" 
    name="{{field.optionsSlug}}[{{field.args.label_for}}]" 
    type="checkbox"
    value="1"
    {{isenv ? 'disabled'}}
    {{value == "1" ? 'checked'}}>
{% endmacro %}