{% from "@ucdlib-directory/macros/person.twig" import teaser, contact %}
{% if attributes.departments %}
  {% for department in attributes.departments %}
    {% if department.people|length %}
      <div class='u-space-mb--large'>
        <div class='u-space-mb'>
          <h2>{{department.post.title}}</h2>
          {% if department.post.description %}
            <p class='text-bold u-space-mb--small'>{{department.post.description}}</p>
          {% endif %}
          {{contact(department.post, 'text--smaller text-bold vm-teaser--person__contact')}}
        </div>
        <div>
          {% for person in department.people %}
            {{teaser(person)}}
          {% endfor %}
        </div>
      </div>
    {% endif %}
  {% endfor %}
{% else %}
  {% for person in attributes.people %}
    {{teaser(person)}}
  {% endfor %}
{% endif %}