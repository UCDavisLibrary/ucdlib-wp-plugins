{% extends getUcdTemplate('base') %}

{% block hero_image %}
{% endblock %}

{% block content_container %}

<div class="l-container l-basic--flipped">
  <div class="l-content">

    {% if post.thumbnail %}
      <div class="u-align--left u-width--one-third u-space--flush">
        <div class="aspect--520x580">
          <img src='{{post.thumbnail.src}}' alt='Picture of special collection'>
        </div>
      </div>

      <div class="u-align--right u-width--two-thirds u-space--flush">
      {% else %}
      <div>
    {% endif %}
    
    <h3>Collection Number: {{post.meta('callNumber')}}</h3>
    
    {% if post.meta('description')|length > 0 %}
      <p>{{post.meta('description')}}</p>
    {% endif %}
    
    {% if post.meta('findingAid')|length > 0 %}
      <h4>Finding Aid</h4>
      <a href="{{post.meta('findingAid').linkURL}}" target="_blank">{{post.meta('findingAid').linkTitle}}</a>
    {% endif %}
    
    {% if post.meta('inclusiveDates')|length > 0 %}
      <h4>Inclusive Dates</h4>
      <p>{{post.meta('inclusiveDates')}}</p>
    {% endif %}

    {% if post.meta('extent')|length > 0 %}
      <h4>Extent</h4>
      <p>{{post.meta('extent')}}</p>
    {% endif %}


    {% if post.terms('collection-subject')|length > 0 %}
      <h4>Subject</h4>
      {{ post.terms('collection-subject')|join('<br>') }}
    {% endif %}

      {% set headerRendered = false %}
      {% for col in post.meta('links') %}
        {% if col.linkType == 'referenceInfo' and col.linkURL|length > 0 and col.displayLabel|length > 0 %}
          {% if not headerRendered %}
            <h4>Additional Collection Info</h4>
            {% set headerRendered = true %}
          {% endif %}
          <p><a href="{{col.linkURL}}" target="_blank">{{col.displayLabel}}</a></p>
        {% endif %}
      {% endfor %}
      
    </div>

    
  </div>
  <div class="l-sidebar-second">
    {{sidebar}}
  </div>  
</div>
{% endblock %}
