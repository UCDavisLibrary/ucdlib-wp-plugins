{% from getUcdMacro('links') import breadcrumbs as render_crumbs %}

{% extends getUcdTemplate('base') %}

{% block breadcrumbs %}
  {{render_crumbs(breadcrumbs)}}
{% endblock %}

{% block content_container %}
<div class="l-container l-basic--flipped">
  <div class="l-content">
    {% if post.isTopPage %}
      {% if post.exhibitLocations and post.exhibitLocations|length %}
        <h2 class='heading--secondary'>{{post.exhibitLocations[0].name}}</h2>
      {% endif %}
      {% if post.exhibitIsPhysical and post.exhibitIsPermanent %}
        <h2 class='heading--secondary'>Permanent Exhibit</h2>
      {% elseif post.exhibitIsPhysical and post.exhibitDateRange %}
        <h2 class='heading--secondary'>{{post.exhibitDateRange}}</h2>
      {% endif %}
    {% endif %}
    {{post.content}}
  </div>
  <div class="l-sidebar-second">
    {{sidebar}}
  </div>
</div>

{% endblock %}